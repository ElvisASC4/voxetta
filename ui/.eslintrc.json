{
    "extends": [
        "google",
        "@open-wc/eslint-config",
        "plugin:lit/recommended",
        "plugin:jasmine/recommended",
        "eslint:recommended",
        "eslint-config-prettier"
    ],
    "rules": {
        "indent": ["warn", 4, {"SwitchCase": 1}],
        "prettier/prettier": ["warn"],
        "require-jsdoc": ["off"]
    },
    "plugins": ["lit", "jasmine", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jasmine": true
    }
}
